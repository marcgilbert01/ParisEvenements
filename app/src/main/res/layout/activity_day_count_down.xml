<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayCountDownActivity">

    <TextView
        android:id="@+id/due_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="01/01/2050"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/day_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/due_date_text_view"
        app:layout_constraintLeft_toLeftOf="@id/due_date_text_view"
        app:layout_constraintRight_toRightOf="@id/due_date_text_view"
        android:layout_marginTop="23dp"
        tools:text="23 Days"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/seconds_left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/day_left_text_view"
        app:layout_constraintLeft_toLeftOf="@id/day_left_text_view"
        app:layout_constraintRight_toRightOf="@id/day_left_text_view"
        android:text="SECONDS LEFT"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/second_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seconds_left_label"
        app:layout_constraintLeft_toLeftOf="@id/seconds_left_label"
        app:layout_constraintRight_toRightOf="@id/seconds_left_label"
        tools:text="32141234"
        android:textSize="23sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>